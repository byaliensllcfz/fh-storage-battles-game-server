{
    "name": "tp-servicename-server",
    "description": "RESTful API.",
    "version": "1.0.0",
    "private": true,
    "engines": {
        "node": ">=10.0.0"
    },
    "dependencies": {
        "body-parser": "^1.18.3",
        "dd-trace": "^0.10.0",
        "express": "^4.16.3",
        "tp-common": "git+https://bitbucket.org/tappshq/tp-nodejs-api-commons.git#3.12.2",
        "uuid": "^3.3.2"
    },
    "devDependencies": {
        "chai": "^4.2.0",
        "chai-as-promised": "^7.1.1",
        "chai-http": "^4.2.1",
        "chai-roughly": "^1.0.0",
        "cross-env": "^5.2.0",
        "eslint": "^5.16.0",
        "eslint-plugin-mocha": "^5.3.0",
        "mocha": "^6.1.2",
        "node-mocks-http": "^1.7.3",
        "npm-run-all": "^4.1.5",
        "nyc": "^13.3.0",
        "rewire": "^4.0.1",
        "sinon": "^7.3.1",
        "sinon-chai": "^3.3.0",
        "sinon-stub-promise": "^4.0.0",
        "sonarqube-scanner": "^2.4.0",
        "vcontrol": "git+https://bitbucket.org/tappshq/vcontrol#stable"
    },
    "scripts": {
        "lint": "eslint .",
        "preinstall": "bash git-setup.sh",
        "postinstall": "bash git-teardown.sh",
        "start": "node index.js",
        "main-test": "cross-env NODE_ENV=test DD_TRACE_ENABLED=false nyc -a --silent --temp-directory=./.nyc_output mocha ./test/test.js -t 60000 -R spec --exit",
        "system-test": "cross-env NODE_ENV=test DD_TRACE_ENABLED=false nyc -a --no-clean --silent --temp-directory=./.nyc_output mocha ./test/system-test.js -t 60000 -R spec --exit",
        "report": "nyc --no-clean --temp-directory=./.nyc_output report --reporter=text --reporter=html --reporter=lcov",
        "test": "npm-run-all main-test report lint"
    }
}
