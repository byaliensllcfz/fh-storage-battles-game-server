{
    "name": "tp-servicename-server",
    "description": "RESTful API.",
    "version": "1.0.0",
    "private": true,
    "engines": {
        "node": ">=10.0.0"
    },
    "dependencies": {
        "@tapps/core": "git+https://bitbucket.org/tappshq/tp-nodejs-core-commons.git#1.0.0",
        "@tapps/logging": "git+https://bitbucket.org/tappshq/tp-nodejs-logging-commons.git#1.0.0",
        "body-parser": "^1.18.3",
        "dd-trace": "^0.11.0",
        "express": "^4.16.3",
        "hot-shots": "^6.3.0",
        "tp-common": "git+https://bitbucket.org/tappshq/tp-nodejs-api-commons.git#3.12.4",
        "uuid": "^3.3.2"
    },
    "devDependencies": {
        "@tapps/magic-mock": "git+https://bitbucket.org/tappshq/tp-nodejs-magic-mock.git#2.0.0",
        "@tapps/test": "git+https://bitbucket.org/tappshq/tp-nodejs-test-commons.git#1.0.0",
        "chai": "^4.2.0",
        "cross-env": "^5.2.0",
        "eslint": "^5.16.0",
        "eslint-plugin-mocha": "^5.3.0",
        "mocha": "^6.1.2",
        "node-mocks-http": "^1.7.3",
        "npm-run-all": "^4.1.5",
        "nyc": "^13.3.0",
        "rewire": "^4.0.1",
        "sinon": "^7.3.1",
        "sinon-chai": "^3.3.0",
        "sinon-stub-promise": "^4.0.0",
        "sonarqube-scanner": "^2.4.0",
        "vcontrol": "git+https://bitbucket.org/tappshq/vcontrol#stable"
    },
    "scripts": {
        "preinstall": "bash git-setup.sh",
        "postinstall": "bash git-teardown.sh",
        "lint": "./node_modules/.bin/eslint .",
        "docs:clean": "del-cli ./docs/*",
        "docs:generate": "esdoc",
        "test:run": "cross-env NODE_ENV=test DD_TRACE_ENABLED=false nyc --silent --temp-directory=./.nyc_output mocha --opts=.mocha.opts",
        "test:report": "nyc --no-clean --temp-directory=./.nyc_output report --reporter=text --reporter=html --reporter=lcov",
        "test": "npm-run-all test:run test:report lint",
        "start": "node index.js"
    }
}
