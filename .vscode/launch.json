    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch",
            "program": "${workspaceFolder}/index.js",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "env": {
                "NODE_ENV": "development",
                "ROLE": "server",
                "DATASTORE_DATASET": "dumbprojectid",
                "DATASTORE_EMULATOR_HOST": "localhost:8081",
                "DATASTORE_EMULATOR_HOST_PATH": "localhost:8081/datastore",
                "DATASTORE_HOST": "http://localhost:8081",
                "DATASTORE_PROJECT_ID": "dumbprojectid"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Test",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": ["--opts=.mocha.opts"],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "env": {
                "NODE_ENV": "test",
                "ROLE": "server",
                "DATASTORE_DATASET": "dumbprojectid",
                "DATASTORE_EMULATOR_HOST": "localhost:8081",
                "DATASTORE_EMULATOR_HOST_PATH": "localhost:8081/datastore",
                "DATASTORE_HOST": "http://localhost:8081",
                "DATASTORE_PROJECT_ID": "dumbprojectid"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Test Contract",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": ["'${workspaceFolder}/test/contract/contract-tests.js'", "--exit"],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "env": {
                "NODE_ENV": "test",
                "ROLE": "server",
                "DATASTORE_DATASET": "dumbprojectid",
                "DATASTORE_EMULATOR_HOST": "localhost:8081",
                "DATASTORE_EMULATOR_HOST_PATH": "localhost:8081/datastore",
                "DATASTORE_HOST": "http://localhost:8081",
                "DATASTORE_PROJECT_ID": "dumbprojectid"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Validate Contracts",
            "program": "npm",
            "args": ["run", "verifyPacts"],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "env": {
                "NODE_ENV": "test",
                "ROLE": "server",
                "DATASTORE_DATASET": "dumbprojectid",
                "DATASTORE_EMULATOR_HOST": "localhost:8081",
                "DATASTORE_EMULATOR_HOST_PATH": "localhost:8081/datastore",
                "DATASTORE_HOST": "http://localhost:8081",
                "DATASTORE_PROJECT_ID": "dumbprojectid"
            }
        }
    ]
}
